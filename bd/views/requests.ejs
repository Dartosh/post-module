<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
<%- include('./partials/nav.ejs') %>
<h1>Requests:</h1>
<ul>
    <% if (requests.length) { %>
        <% requests.forEach(({ text, title } ) => { %>
            <li>
                <article>
                    <h2>
                        <p><%= title %></p>
                    </h2>
                    <p><%= text %></p>
                </article>
            </li>
        <% }) %>
    <% } %>
</ul>

<script>
    document.addEventListener('click', (e) => {
        const id = e.target?.dataset?.id || null;
        if (id) {
            fetch(`/posts/${id}`, {
                method: 'DELETE',
            }).then(() => {
                window.location.reload();
            })
        }
    })
</script>
</body>
</html>
